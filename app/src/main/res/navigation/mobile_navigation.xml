<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.hyper.newsapp.news.view.NewsFragment"
        android:label="@string/title_News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_resources"
        android:name="com.hyper.newsapp.sources.view.SourcesFragment"
        android:label="@string/title_sources"
        tools:layout="@layout/fragment_sources" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.hyper.newsapp.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>